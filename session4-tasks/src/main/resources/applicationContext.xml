<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context.xsd">




    <bean id="draw2d" class="org.example.task1.Draw2d"></bean>
    <bean id="draw3d" class="org.example.task1.Draw3d"></bean>
    <bean id="circle" class="org.example.task1.Circle" scope="singleton">
        <constructor-arg ref="draw2d"></constructor-arg>
        <constructor-arg ref="draw3d"></constructor-arg>
    </bean>
    <bean id="square" class="org.example.task1.Square" scope="prototype">
        <property name="draw2d" ref="draw2d"></property>
        <property name="draw3d" ref="draw3d"></property>
    </bean>
    <bean id="dpOps"
          class="org.example.task2.DatabaseOperations"
          init-method="connectToDatabase"
          destroy-method="disconnectToDatabase">

    </bean>
</beans>





